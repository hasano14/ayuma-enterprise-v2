{
  "version": 2,
  "public": false,
  "builds": [
    { "src": "/client/package.json", "use": "@vercel/static-build" },
    { "src": "/backend/server.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/backend/(.*)", "destination": "/backend/server.js" },
    { "source": "/client/public/(.*)", "destination": "client/public/index.html" }
  ]
}
